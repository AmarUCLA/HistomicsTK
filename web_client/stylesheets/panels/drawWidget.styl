.h-elements-container
    width 100%
    max-height 300px
    overflow-y auto
    margin-top 5px
    padding 3px 5px

    .h-element
        span
            cursor pointer

        .h-element-label
            margin-left 5px

        .h-delete-element
            float right


    .h-element:hover
        background-color #eee

.h-save-annotation
    float right

.h-draw-widget
  .h-draw-tools
    .btn-group-sm>.btn
      padding-left 3px
      padding-right 7px

  .h-style-group-row
    margin 10px 0
